<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ProjetoList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{projetoHome.wire}"/>

   <param name="projetoFrom"/>
   <param name="projetoIdProjeto" value="#{projetoHome.projetoIdProjeto}"/>
   <param name="equipeFrom"/>
   <param name="equipeIdEquipe" value="#{equipeHome.equipeIdEquipe}"/>



   <navigation from-action="#{projetoHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Projeto.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{projetoHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Projeto.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{projetoHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ProjetoList.xhtml"/>
      </rule>
   </navigation>

</page>
